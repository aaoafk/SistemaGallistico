<div class="container mx-auto px-4 py-8">
    <% if flash.present? %>
        <%= render "shared/flash" %>
    <% end %>

    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-900">Taxonomías de Gallos</h1>
        <%= link_to "Nueva Taxonomía", new_taxonomia_path, 
            class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg" %>
    </div>

    <%# Desktop table view %>
    <div class="hidden md:block">
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Gallo</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Padre</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Madre</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
                    </tr>
                </thead>
                <tbody id="taxonomias" class="bg-white divide-y divide-gray-200">
                    <%= render partial: "taxonomia", collection: @taxonomias, as: :taxonomia %>
                </tbody>
            </table>
        </div>
    </div>

    <%# Mobile card view %>
    <div class="space-y-4 md:hidden">
        <%= render partial: "taxonomia_card", collection: @taxonomias, as: :taxonomia %>
    </div>
</div>
