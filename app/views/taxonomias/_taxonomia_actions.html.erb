<div class="col-span-2 flex flex-wrap justify-start gap-2 mt-4">
    <%# Ver (View) Action %>
    <%= link_to taxonomia_path(taxonomia), 
        class: "inline-flex items-center px-2 py-1.5 rounded-md text-xs font-medium
                bg-blue-50 text-blue-700 hover:bg-blue-100 
                transition-colors duration-200 ease-in-out" do %>
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
        </svg>
        Ver
    <% end %>

    <%# Editar (Edit) Action %>
    <%= link_to edit_taxonomia_path(taxonomia), 
        class: "inline-flex items-center px-2 py-1.5 rounded-md text-xs font-medium
                bg-green-50 text-green-700 hover:bg-green-100
                transition-colors duration-200 ease-in-out" do %>
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
        </svg>
        Editar
    <% end %>

    <%# Eliminar (Delete) Action %>
    <%= link_to taxonomia_path(taxonomia), 
        class: "inline-flex items-center px-2 py-1.5 rounded-md text-xs font-medium
                bg-red-50 text-red-700 hover:bg-red-100
                transition-colors duration-200 ease-in-out",
        data: { turbo_method: :delete, 
                turbo_confirm: '¿Estás seguro de eliminar esta taxonomía?' } do %>
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
        Eliminar
    <% end %>

    <%# Ver Detalles del Gallo (View Gallo Details) Action %>
    <% if taxonomia.gallo.present? %>
        <%= link_to gallo_path(taxonomia.gallo), 
            class: "inline-flex items-center px-2 py-1.5 rounded-md text-xs font-medium
                    bg-purple-50 text-purple-700 hover:bg-purple-100
                    transition-colors duration-200 ease-in-out" do %>
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12l-3 3m0 0l-3-3m3 3V9"/>
            </svg>
            Ver Detalles del Gallo
        <% end %>
    <% end %>
</div>
